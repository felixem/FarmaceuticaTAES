<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_titulovisita"
        android:text="Modificar Visitas"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewTitleStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="126dp"
            android:layout_height="70dp"
            android:text=""
            android:hint="Introduzca observaciones"
            android:id="@+id/observaciones"/>

        <EditText
            android:id="@+id/minutos"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/observaciones"
            android:hint="Introduzca los minutos"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="130dp"
            />

        <EditText
            android:id="@+id/lugarvisita"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:hint="Introduzca el lugar de visita"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/minutos"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp">


        <EditText
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text=""
            android:gravity="center_horizontal"
            android:hint="Introduzca la fecha salida"
            android:id="@+id/fechasalida"/>


        <EditText
            android:id="@+id/fechareporte"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/fechasalida"
            android:hint="Introduzca la fecha reporte"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="130dp"
            />

        <EditText
            android:id="@+id/acompanyado"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:hint="CompaÃ±ia: SI/NO"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/fechareporte"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar Cambios"
        android:id="@+id/button2"
        android:onClick="Modificar_Visita"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>