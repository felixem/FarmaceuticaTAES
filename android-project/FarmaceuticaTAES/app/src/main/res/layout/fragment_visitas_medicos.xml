<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_titulo_visitas_medicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ver visitas del mÃ©dico"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/txt_centro_medico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        />

    <farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter
        android:id="@+id/spinner_centros_medicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter>

    <TextView
        android:id="@+id/txt_medico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>/>

    <farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter
        android:id="@+id/spinner_medicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter>

    <TextView
        android:id="@+id/txt_visita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>

    <farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter
        android:id="@+id/spinner_visitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalles"
        android:id="@+id/button_ver_detalles"
        android:layout_marginTop="15dp"/>


</LinearLayout>