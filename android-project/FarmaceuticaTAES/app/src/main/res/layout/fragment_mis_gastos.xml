<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_titulo_mis_gastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis gastos"
        style="@style/TextViewTitleStyle"/>

    <TextView
        android:id="@+id/txt_reporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        style="@style/TextViewSelectionStyle"
        android:layout_marginTop="15dp"
        />

    <farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter
        style="@style/SpinnerStyle"
        android:id="@+id/spinner_reportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter>

    <TextView
        android:id="@+id/txt_gasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        style="@style/TextViewSelectionStyle"
        android:layout_marginTop="15dp"
        />

    <farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter
        style="@style/SpinnerStyle"
        android:id="@+id/spinner_gastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </farmaceutica.taes.farmaceutica.presentacion.controlador.util.view.SpinnerOnChangeAdapter>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver detalles"
        android:id="@+id/button_ver_detalles"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_reportar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Crear Reporte Gastos"
        android:clickable="true"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>